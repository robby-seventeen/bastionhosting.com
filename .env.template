# Bastion Hosting Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
APP_ENV=production
APP_DEBUG=false

# Site Configuration
SITE_URL=https://bastionhosting.com
SITE_NAME="Bastion Hosting"
COMPANY_NAME="17 Solutions LLC"

# Database Configuration
DB_HOST=localhost
DB_NAME=bastion_hosting
DB_USER=bastion_user
DB_PASS=your_secure_database_password_here

# Security Keys (Generate new ones!)
SECRET_KEY=your_secret_key_here_minimum_32_characters
ENCRYPT_KEY=your_encryption_key_here_minimum_32_chars

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# For Office 365/Outlook:
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587

# For SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your_sendgrid_api_key

# Blesta Integration (Billing System)
BLESTA_URL=https://billing.bastionhosting.com
BLESTA_API_KEY=your_blesta_api_key_here
BLESTA_COMPANY_ID=1

# Domain API Configuration
DOMAIN_API_URL=https://api.namecheap.com/xml.response
DOMAIN_API_KEY=your_namecheap_api_key_here

# Or for other providers:
# DOMAIN_API_URL=https://api.godaddy.com/v1
# DOMAIN_API_KEY=your_godaddy_api_key_here

# Social Media Links (Optional)
TWITTER_URL=https://twitter.com/bastionhosting
LINKEDIN_URL=https://linkedin.com/company/bastionhosting
GITHUB_URL=https://github.com/bastionhosting

# Analytics (Privacy-friendly options)
# PLAUSIBLE_DOMAIN=bastionhosting.com
# FATHOM_SITE_ID=your_fathom_site_id

# Cloudflare Configuration (if using Cloudflare)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Backup Configuration
BACKUP_S3_BUCKET=bastion-backups
BACKUP_S3_KEY=your_aws_access_key
BACKUP_S3_SECRET=your_aws_secret_key
BACKUP_S3_REGION=us-east-1

# Monitoring (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# Rate Limiting
RATE_LIMIT_CONTACT_FORM=5
RATE_LIMIT_DOMAIN_SEARCH=20
RATE_LIMIT_WINDOW=3600

# File Upload Limits
MAX_UPLOAD_SIZE=50
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Session Configuration
SESSION_LIFETIME=1440
SESSION_SECURE=true
SESSION_HTTPONLY=true

# Cache Configuration
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# Development Only Settings
DEV_SHOW_ERRORS=false
DEV_LOG_QUERIES=false
DEV_FAKE_EMAIL=false
